// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./books-sae.db"
}

model User {
    id       Int      @id @default(autoincrement())
    login    String   @unique
    password String
    token    String   @unique
    books    Book[]
}

model Book {
    isbn     String    @id // l'ISBN choisi est l'isbn 13
    title String
    cover String
    user_id Int?
    user User? @relation(fields: [user_id], references: [id])
}
